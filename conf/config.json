{
	"server": {
		"http": {
			"port": [ 8089 ]
		},
		"tcp": {
			"port": [ 2003 ]
		}
	},
	"client": {
		"statsd": {
			"enabled": false,
			"server" : "lmn-corp-graphite001.corp.lastminute.com",
    		"prefix" : "lmn.corp.application.pcioob_mon.red-timestore_dev.instance"
		},
		"redis": {
		  "redis01": {
				"server":	"redis01.shandymora.com",
				"port":		6379,
				"db":		3, 
				"slots":	[ "0-16383" ],
				"slot_default":	true,
				"config": [
					{
						"parameter":	"zset-max-ziplist-entries",
						"value":		3000
					},
					{
						"parameter":	"zset-max-ziplist-value",
						"value":		256
					}
				]
					
			}
			
		}
	},
	"app": {
		"auto_reload_config":	false,
		"slot_count":			16384,
		"cluster": {
			"heartbeat":		10000,
			"nodes":			[ "redis01" ]
		},
		"whitelist": [
			"^lmn\\..*",
			"^servers\\..*",
			"^collectd\\..*"
		],
		"blacklist": [
			
		],
		"schemas": [
			{
				"pattern": 		"^servers\\.lmn-corp-mon001\\..*",
				"retentions":	[ "60s:2h" ]
			},
			{
				"pattern": 		"^servers\\.lmn-corp-mon002\\..*",
				"retentions":	[ "5m:1d", "60s:1h" ]
			}
		],
		"schema_default": {
			"retentions":		[ "60s:12h", "5m:2d" ]
		}
	}
}
